<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mall.dao.wx.TShopCategoryMapper" >
    <resultMap id="TShopCategoryMap" type="com.mall.wxshop.entity.shop.TShopCategory">
        <id column="id" property="id"/>
        <result column="shop_id" property="shopId"/>
        <result column="category_name" property="categoryName"/>
        <result column="delFlag" property="delFlag"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <collection property="shopProducts" column="id" select="findProductById"/>
    </resultMap>

    <select id="getShopCategory" resultMap="TShopCategoryMap" parameterType="java.lang.String">
        select * from t_shop_category a where a.delFlag = '0' and a.shop_id = #{shopId}
    </select>

    <select id="getShopCategorySale" resultType="com.mall.wxshop.entity.shop.TShopCategory" parameterType="java.lang.String">
        select * from t_shop_category a where a.delFlag = '0' and a.shop_id = #{shopId}
    </select>

    <select id="findProductById" resultType="com.mall.wxshop.entity.shop.TShopProduct" parameterType="java.lang.String">
        select * from t_shop_product a where a.category_id = #{id} and delFlag = '0'
    </select>

</mapper>


